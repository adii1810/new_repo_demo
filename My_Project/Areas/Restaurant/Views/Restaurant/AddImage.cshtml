@model My_Project.Areas.Restaurant.ViewModels.ProductImageViewModel

@{
    ViewData["Title"] = "AddImage";
    Layout = "~/Views/Shared/_RestaurantLayout.cshtml";
}

<h1>AddImage</h1>

<h4>ProductImageViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddImage" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                <input type="hidden" asp-for="Restaurant_DetailId" class="form-control" />
                <span asp-validation-for="Restaurant_DetailId" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input type="hidden" asp-for="ProductId" class="form-control" />
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>

            <div class="form-group">

                <input type="file" asp-for="images" multiple class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

