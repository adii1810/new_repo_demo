
@{
    ViewData["Title"] = "Rating";
    Layout = null;
    var id = ViewBag.ProdId;
}

<style>
    * {
  box-sizing: border-box;
}

@@-webkit-keyframes blink {
  0% {
    transform: scaleY(1);
  }
  2% {
    transform: scaleY(0);
  }
  4% {
    transform: scaleY(1);
  }
  100% {
    transform: scaleY(1);
  }
}

@@keyframes blink {
  0% {
    transform: scaleY(1);
  }
  2% {
    transform: scaleY(0);
  }
  4% {
    transform: scaleY(1);
  }
  100% {
    transform: scaleY(1);
  }
}


.smileys {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 6rem;
}
.smileys:has(.smiley.active) .smiley:not(.active) {
  opacity: 0.5;
}
.smileys .smiley {
  --start-color: red;
  --end-color: blue;
  width: 5rem;
  height: 5rem;
  border-radius: 100%;
  position: relative;
  border: none;
  overflow: hidden;
  margin: 0 0.5rem;
  transition: opacity 600ms;
}
.smileys .smiley:hover .face, .smileys .smiley:hover .background, .smileys .smiley.active .face, .smileys .smiley.active .background {
  transform: translateX(-0.5rem);
}
.smileys .smiley.active {
  border: 0.5rem orange solid;
  width: 5.5rem;
  height: 5.5rem;
  margin: 0 1rem;
}
.smileys .smiley .background {
  width: 5.5rem;
  height: 5.5rem;
  background: radial-gradient(93.75% 96.51% at 6.25% 97.32%, var(--start-color) 0%, var(--end-color) 100%);
  position: relative;
  left: -0.5rem;
  top: -0.5rem;
}
.smileys .smiley .face {
  width: 100%;
  position: absolute;
  left: 0.5rem;
  transition: all 600ms;
  z-index: 3;
}
.smileys .smiley .face .eyes, .smileys .smiley .face .eyebrows {
  display: flex;
  justify-content: space-around;
}
.smileys .smiley .face .eyes {
  height: 0.8rem;
  -webkit-animation: 5s linear blink infinite;
          animation: 5s linear blink infinite;
}
.smileys .smiley .face .eyes .eye {
  height: 0.8rem;
  width: 0.8rem;
  border-radius: 100%;
  background: black;
}
.smileys .smiley .face .mouth {
  width: 1.5rem;
  margin-left: auto;
  margin-right: auto;
  border: 0.30rem black solid;
}
.smileys .smiley.frown {
  --start-color: #FF3C27;
  --end-color: #FF8355;
}
.smileys .smiley.frown .face {
  top: 2.5rem;
}
.smileys .smiley.frown .face .eyebrow {
  width: 1.2rem;
  height: 0.4rem;
  background: black;
  margin-bottom: 0.2rem;
}
.smileys .smiley.frown .face .eyebrow:first-child {
  transform: rotate(30deg);
}
.smileys .smiley.frown .face .eyebrow:last-child {
  transform: rotate(-30deg);
}
.smileys .smiley.frown .face .mouth {
  margin-top: -0.4rem;
  height: 0.8rem;
  border-bottom: none;
  border-top-left-radius: 0.8rem;
  border-top-right-radius: 0.8rem;
}
.smileys .smiley.sad {
  --start-color: #FF5427;
  --end-color: #FFB055;
}
.smileys .smiley.sad .face {
  top: 2.5rem;
}
.smileys .smiley.sad .face .mouth {
  margin-top: -0.4rem;
  height: 0.8rem;
  border-bottom: none;
  border-top-left-radius: 0.8rem;
  border-top-right-radius: 0.8rem;
}
.smileys .smiley.neutral {
  --start-color: #FFA93D;
  --end-color: #FFD784;
}
.smileys .smiley.neutral .face {
  top: 2rem;
}
.smileys .smiley.neutral .mouth {
  border-left: none;
  border-right: none;
  border-bottom: none;
}
.smileys .smiley.smile {
  --start-color: #FFC327;
  --end-color: #FFE455;
}
.smileys .smiley.smile .face {
  top: 1.5rem;
}
.smileys .smiley.smile .mouth {
  border-top: none;
  border-bottom-left-radius: 0.8rem;
  border-bottom-right-radius: 0.8rem;
  height: 0.8rem;
}
.smileys .smiley.happy {
  --start-color: #FFE631;
  --end-color: #FFF46A;
}
.smileys .smiley.happy .face {
  top: 1rem;
}
.smileys .smiley.happy .mouth {
  border-top: none;
  border-bottom-left-radius: 0.8rem;
  border-bottom-right-radius: 0.8rem;
  height: 0.8rem;
  background: black;
}
</style>


<div class="smileys">
    <button class="smiley frown" id="1" onclick="select(this,1,@id)">
        <div class="background"></div>
        <div class="face">
            <div class="eyebrows">
                <div class="eyebrow"></div>
                <div class="eyebrow"></div>
            </div>
            <div class="eyes">
                <div class="eye"></div>
                <div class="eye"></div>
            </div>
            <div class="mouth"></div>
        </div>
    </button>
    <button class="smiley sad" id="2" onclick="select(this,2,@id)">
        <div class="background"></div>
        <div class="face">
            <div class="eyes">
                <div class="eye"></div>
                <div class="eye"></div>
            </div>
            <div class="mouth"></div>
        </div>
    </button>
    <button class="smiley neutral" id="3" onclick="select(this,3,@id)">
        <div class="background"></div>
        <div class="face">
            <div class="eyes">
                <div class="eye"></div>
                <div class="eye"></div>
            </div>
            <div class="mouth"></div>
        </div>
    </button>
    <button class="smiley smile" id="4" onclick="select(this,4,@id)">
        <div class="background"></div>
        <div class="face">
            <div class="eyes">
                <div class="eye"></div>
                <div class="eye"></div>
            </div>
            <div class="mouth"></div>
        </div>
    </button>
    <button class="smiley happy" id="5" onclick="select(this,5,@id)">
        <div class="background"></div>
        <div class="face">
            <div class="eyes">
                <div class="eye"></div>
                <div class="eye"></div>
            </div>
            <div class="mouth"></div>
        </div>
    </button>
</div>

<script>
    $(document).ready(() => {
        var rate = @ViewBag.Rate;
        if (rate != 0)
            $(`#${rate}`).addClass("active");
    })
    
    $('#Checkout').hide();
   

</script>