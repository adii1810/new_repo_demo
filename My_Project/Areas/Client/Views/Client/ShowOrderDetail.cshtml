@model IEnumerable<My_Project.Areas.Client.ViewModels.CartProductViewModel>

@{
    ViewData["Title"] = "Show Order Detail";
    int total = 0;
}

<head>

    <style>
        .modal.fade {
            opacity: 1;
        }

        .table-image thead td,
        .table-image thead th {
            border: 0;
            color: #666;
            font-size: 0.8rem;
        }

        .table-image td,
        .table-image th {
            vertical-align: middle;
            text-align: center;
        }

            .table-image td.qty,
            .table-image th.qty {
                max-width: 2rem;
            }

        .price {
            margin-left: 1rem;
        }

        .modal-footer {
            padding-top: 0rem;
        }

        .quantity {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 0;
        }
    </style>
</head>

<table class="table table-image">
    <thead>
        <tr>
            <th scope="col"></th>
            <th scope="col">Product</th>
            <th scope="col">Price</th>
            <th scope="col">Quantity</th>
            <th scope="col">Total</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.ImgLink" class="img-fluid img-thumbnail" height="70" width="70" alt="Sheep">
                </td>
                <td>@item.ProductName</td>
                <td>@item.Price</td>
                <td class="qty">
                    <div class="quantity">

                        <input name="quantity" type="text" disabled class="quantity__input" id="quantity__input_@item.ProductId" value="@item.Quantity">

                    </div>
                </td>
                @{
                    var data = item.Price * item.Quantity;
                    total = total + data;
                }
                <td>
                    @data
                </td>


            </tr>

        }

    </tbody>
</table>
<div class="d-flex justify-content-end">
    <h5>Total: <span class="price text-success">@total</span></h5>
</div>
<script>
    $('#form-modal').ready(() => {
        $('#close').click(() => {
            $('#form-modal').hide();
        })
    })
</script>























