@model IEnumerable<My_Project.Areas.Client.ViewModels.ShowProductViewModel>

@{
    ViewData["Title"] = "ShowRestaurantProduct";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
    var data = ViewBag.ResName ?? "";
}


<style>
    .table td {
        border-top:0px !important;
        border-bottom:0px !important
    }
    .imgContainer {
        position: relative;
    }

    .imgContainer img {
        display: block;
    }

        .imgContainer .bi-circle-fill {
            position: absolute;
            top: 0;
            right: 0;
        }
        .imgContainer .vegan {
            position: absolute;
            top: 0;
            right: 0;
        }
    #type {
        width: 25px;
        text-align: center;
    }
    #prodimg {
        width: 10rem;
        height: 7rem
    }
        
    @@media screen and (max-width: 600px) {
        table {
            border: 0;
        }

            table caption {
                font-size: 1.3em;
            }

            table thead {
                border: none;
                clip: rect(0 0 0 0);
                height: 1px;
                margin: -1px;
                overflow: hidden;
                padding: 0;
                position: absolute;
                width: 1px;
            }

            table tr {
                border-bottom: 3px solid #ddd;
                display: block;
                margin-bottom: .625em;
            }

            table td {
                border-bottom: 1px solid #ddd;
                display: block;
                font-size: .8em;
                text-align: right;
            }

                table td::before {
                    /*
                    * aria-label has no advantage, it won't be read inside a table
                    content: attr(aria-label);
                    */
                    content: attr(data-label);
                    float: left;
                    font-weight: bold;
                    text-transform: uppercase;
                }

                table td:last-child {
                    border-bottom: 0;
                }
        #type {
            width: 15px;
            height:15px;
            text-align: center;
            font-size:10px;
        }
        #prodimg {
            width: 5rem;
            height: 3rem;
        }
    }
</style>

<div>
    <table class="table">
        <tr class="row border-0">
            <td class="col-1 border-0"></td>
            <td class="col-8 border-0">
                <input type="text" value="" name="restaurant_Name" class="form-control" id="Name" placeholder="Restaurant" />

            </td>
            <td class="col-2 border-0">
                <button class="btn btn-warning text-dark" id="SearchRes" style="width:100%"><i class="fa-solid fa-magnifying-glass"></i></button>
                @*<input type="button" class="btn btn-warning text-dark form-control" id="btnSearchRestaurant" style="width:100%" value="Search" />*@
            </td>
        </tr>
    </table>
</div>



<table class="table">
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <div class="container w-85 p-3">
                        <div class="d-flex align-items-center">
                            <div class="imgContainer">
                                <img class="flex-shrink-0 img-fluid rounded" src="@item.ImgLink" id="prodimg" onclick="getProductId(@item.Product_Id)">
                                @if (item.type == 0)
                                {
                                    <i class="bi bi-circle-fill" id="type" style="background-color:white; color:green;border:1px solid green; "></i>
                                }
                                else if (item.type == 1)
                                {
                                    <i class="bi bi-circle-fill" id="type" style="background-color:white; color:red;border:1px solid red;"></i>
                                }
                                else if (item.type == 2)
                                {
                                    <p class="vegan" id="type" style="background-color:white; color:green;border:1px solid green;font-weight:bold; text-decoration:none ">V</p>
                                }
                            </div>
                            
                            <div class="w-100 d-flex flex-column text-start ps-4">
                                <div>
                                    <div class="d-flex pb-2">
                                        <div class="col-6 text-left" style="font-size:larger; color:black;font-weight:600">
                                            <span>@item.Product_Name</span>

                                            <span class="border border-0" style="font-size:15px; color:white; background-color:green; border-radius:5px">&nbsp;&nbsp;@item.Rate&nbsp;&starf;&nbsp;&nbsp;</span>

                                        </div>
                                        <div class="col-6 text-right">
                                            <span class="text-primary" style="font-size:larger; color:orange;font-weight:600"><i class="fa-solid fa-indian-rupee-sign"> @item.Product_Price</i></span>
                                        </div>
                                    </div>

                                </div>
                                <div>
                                    <small class="fst-italic d-flex justify-content-between">
                                        @item.Description
                                        <span class="text-primary" id="btnchange_@item.Product_Id"><button class="btn btn-warning text-white" onclick="AddProduct(@item.Product_Id)" id="btn_@item.Product_Id">Add</button></span>
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>

            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(() => {
       // alert("@data")

        $(".display-3").html("@data".toUpperCase());
    })

</script>