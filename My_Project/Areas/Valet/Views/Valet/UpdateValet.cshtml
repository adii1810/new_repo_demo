@model My_Project.Areas.Valet.ViewModels.ValetViewModel

@{
    ViewData["Title"] = "UpdateValet";
    Layout = "~/Views/Shared/_ValetLayout.cshtml";
}

<style>
    .form-control {
        border-radius: 5px;
    }

    .btn {
        border-radius: 5px;
    }
</style>

<hr />
<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-md-4">
            <form asp-action="UpdateValet" enctype="multipart/form-data" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">

                    <input type="hidden" asp-for="Valet_Id" class="form-control" required />
                </div>
                <div class="form-group">

                    <input asp-for="Valet_Name" class="form-control" placeholder="Restaurant Name" required />
                    <span asp-validation-for="Valet_Name" class="text-danger"></span>
                </div>

                <div class="form-group">

                    <input asp-for="Valet_Address" class="form-control" placeholder="Address" required />
                    <span asp-validation-for="Valet_Address" class="text-danger"></span>
                </div>
                <div class="form-group">

                    <input asp-for="Valet_PhoneNo" class="form-control" onkeyup="if (/\D/g.test(this.value)) this.value = this.value.replace(/\D/g,'')" placeholder="Contact No" minlength="10" maxlength="10" required />
                    <span asp-validation-for="Valet_PhoneNo" class="text-danger"></span>
                </div>
                <div class="form-group">

                    <input type="email" asp-for="Valet_Email" class="form-control" placeholder="Email" required />
                    <span asp-validation-for="Valet_Email" class="text-danger"></span>
                </div>
                <div class="form-group">

                    <input asp-for="Valet_City" class="form-control" placeholder="City" required />
                    <span asp-validation-for="Valet_City" class="text-danger"></span>
                </div>
                <div class="form-group">

                    <input asp-for="Valet_State" class="form-control" placeholder="State" required />
                    <span asp-validation-for="Valet_State" class="text-danger"></span>
                </div>
                <div class="form-group">

                    <input asp-for="Valet_Zipcode" class="form-control" placeholder="Zipcode" required />
                    <span asp-validation-for="Valet_Zipcode" class="text-danger"></span>
                </div>
                <div class="form-group">

                    <input type="hidden" asp-for="Valet_UserName" class="form-control" required />
                </div>
                <div class="form-group">

                    <input type="hidden" asp-for="Valet_Password" class="form-control" required />
                </div>

                <input type="submit" value="Save" class="btn btn-primary btn-block " />

            </form>
        </div>
    </div>
</div>

