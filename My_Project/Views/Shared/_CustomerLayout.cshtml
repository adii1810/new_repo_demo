<body>

    <div class="container-xxl bg-white p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->
        <!-- Navbar & Hero Start -->
        <div class="container-xxl position-relative p-0">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-4 px-lg-5 py-3 py-lg-0">
                <a href="" class="navbar-brand p-0">
                    <h1 class="text-primary m-0"><i class="fa fa-utensils me-3"></i>Foodz</h1>
                    <!-- <img src="img/logo.png" alt="Logo"> -->
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="fa fa-bars"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav ms-auto py-0 pe-4">
                        <a asp-area="Client" asp-controller="Client" asp-action="Index" class="nav-item nav-link">Home</a>
                        <a asp-area="Client" asp-controller="Client" asp-action="Categories" class="nav-item nav-link">Restaurants</a>
                        <a asp-area="Client" asp-controller="Client" asp-action="ShowOrders" class="nav-item nav-link">Order History</a>
                        <a asp-area="Client" asp-controller="Client" asp-action="CustomerIndex" class="nav-item nav-link">Menu</a>
                        <a href="#contactUs" class="nav-item nav-link">Contact</a>
                    </div>
                    <a><i class="fa-solid fa-cart-shopping fa-2x" style="color:orange" onclick="showInPopup('@Url.Action("Cart","Client",null,Context.Request.Scheme)','Cart')"></i></a>
                    <div class="p-3">
                        <div class="nav-item dropdown">
                            <a asp-action="Logout" asp-area="Client" asp-controller="Client"><i class="fa-solid fa-right-from-bracket fa-2x" style="color:orange"></i></a>
                            <div class="dropdown-menu m-0">

                                <a class="dropdown-item" onclick="showInPopup('@Url.Action("UpdateCustomer","Client",null,Context.Request.Scheme)','Update Profile')"><i class="fa-solid fa-file-pen" style="color:orange"></i> Update Profile</a>
                                <a class="dropdown-item" onclick="showInPopup('@Url.Action("ChangePassword","Client",null,Context.Request.Scheme)','Change Password')"><i class="fa-solid fa-key" style="color:orange"></i> Change Password</a>

                                <a class="dropdown-item" onclick="showInPopup('@Url.Action("CustomerReg","Client",null,Context.Request.Scheme)','Customer Registration')"></a>
                            </div>
                        </div>


                    </div>
                </div>
            </nav>

            <div class="container-xxl py-5 bg-dark hero-header mb-5">
                <div class="container text-center my-5 pt-5 pb-4">
                    <h1 class="display-3 text-white mb-3 animated slideInDown">Food Menu</h1>

                </div>
            </div>
        </div>

        <!-- Navbar & Hero End -->
        <!-- Menu Start -->
        @RenderBody()

        <!-- Menu End -->
        <div class="container" id="pagination1">
            <div id="pagination-wrapper" class=" d-flex justify-content-center"></div>
        </div>


        <div class="modal fade" id="form-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable flipInX animated" role="document">
                <div class="modal-content">
                    <div class="modal-header border-bottom-0">
                        <h5 class="modal-title" id="exampleModalLabel">
                            Your Shopping Cart
                        </h5>

                    </div>
                    <div class="modal-body">

                    </div>
                    <div class="modal-footer border-top-0 d-flex justify-content-between">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal" id="close">Close</button>
                        <button type="button" id="Checkout" class="btn btn-success">Checkout</button>
                    </div>
                </div>
            </div>
        </div>


